<body>
  <%= notice %>
  <h1>Books</h1>
  <table>
    <thead>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to "Show",book_path(book) %></td>
        <td><%=link_to "Edit",edit_book_path(book) %></td>
        <td><%=link_to "Destroy",book_path(book),method: :delete %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= form_with model:@book,local:true do |f| %>
  
 
    <div class=field>
      <label for="book_title">Title</label>
      <div class="book_form"><%= f.text_field :title %></div>
    </div>  
    <div class=field>
      <label for="book_title">Body</label>
      <div class="book_form"><%= f.text_area :body %></div>
    </div> 
    <div class="actions"><%= f.submit 'Create Book' %></div>
  
  <% end %>
</body>
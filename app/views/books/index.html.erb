<body>
<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= link_to book.body, book_path(book) %></td>
      <td><%=link_to "Show",book_path(book) %></td>
      <td><%=link_to "Edit",edit_book_path(book) %></td>
      <td><%=link_to "Destroy",book_path(book),method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>

<!--<form class=new_book>-->
  <div class=field>
    <label for="book_title">Title</label>
    <div class="book_form"><%= f.text_field :title %></div>
  </div>  
  <div class=field>
    <label for="book_title">Body</label>
    <div class="book_form"><%= f.text_area :body %></div>
  </div> 
  <div class="actions"><%= f.submit 'Create Book' %></div>
<!--</form>-->
<% end %>
</body>
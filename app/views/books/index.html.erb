<body>
<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>New bookタイトル</td>
      <td>New book本文</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>

<form class=new_book>
  <div class=field>
    <label for="book_title">Title</label>
    <div class="book_form"><%= f.text_field :title %></div>
  </div>  
  <div class=field>
    <label for="book_title">Body</label>
    <div class="book_form"><%= f.text_area :body %></div>
  </div> 
  <div class="actions"><%= f.submit 'Create Book' %></div>
</form>

<% end %>
</body>